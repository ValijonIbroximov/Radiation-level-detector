<Window x:Class="Radiation_level_detector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Radiation_level_detector"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Radiation level detector" Height="720" Width="1280" 
        Icon="/MV.png">
    
    <Grid>
        <Image Source="map.png" Stretch="Fill"/>

        <TextBlock x:Name="NotificationText" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Top"
           Margin="0,20,0,0"
           FontSize="20"
           Foreground="White"
           Background="#AA333333"
           Padding="20,10"
           Visibility="Collapsed"
           TextWrapping="Wrap"
           TextAlignment="Center"/>
        
        

        <Grid x:Name="AnimationGrid1" Width="auto" Height="auto" Margin="846,38,974,926"
      HorizontalAlignment="Center"
      VerticalAlignment="Center">
            <Ellipse x:Name="GlowEffect1"
     Width="100" Height="100"
     Fill="#efeb24"
     Opacity="0.3"
     RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="glowScale1" ScaleX="0.9" ScaleY="0.9"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse x:Name="Circle1"
     Width="50" Height="50"
     Fill="#00ff00"
     Stroke="Transparent"
     RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="scaleTransform1" ScaleX="0.9" ScaleY="0.9"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <TextBlock x:Name="PercentText1"
       Text="1%"
       FontSize="14"
       FontWeight="Bold"
       Foreground="blue"
       HorizontalAlignment="Center"
       VerticalAlignment="Center"/>
        </Grid>

        <Grid x:Name="AnimationGrid2" Width="auto" Height="auto" Margin="846,38,974,926"
      HorizontalAlignment="Center"
      VerticalAlignment="Center">
            <Ellipse x:Name="GlowEffect2"
     Width="100" Height="100"
     Fill="#efeb24"
     Opacity="0.3"
     RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="glowScale2" ScaleX="0.9" ScaleY="0.9"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse x:Name="Circle2"
     Width="50" Height="50"
     Fill="#00ff00"
     Stroke="Transparent"
     RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="scaleTransform2" ScaleX="0.9" ScaleY="0.9"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <TextBlock x:Name="PercentText2"
       Text="2%"
       FontSize="14"
       FontWeight="Bold"
       Foreground="blue"
       HorizontalAlignment="Center"
       VerticalAlignment="Center"/>
        </Grid>

        <Grid x:Name="AnimationGrid3" Width="auto" Height="auto" Margin="822,768,998,196"
      HorizontalAlignment="Center"
      VerticalAlignment="Center">
            <Ellipse x:Name="GlowEffect3"
Width="100" Height="100"
Fill="#efeb24"
Opacity="0.3"
RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="glowScale3" ScaleX="0.9" ScaleY="0.9"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse x:Name="Circle3"
Width="50" Height="50"
Fill="#00ff00"
Stroke="Transparent"
RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="scaleTransform3" ScaleX="0.9" ScaleY="0.9"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <TextBlock x:Name="PercentText3"
  Text="3%"
  FontSize="14"
  FontWeight="Bold"
  Foreground="blue"
  HorizontalAlignment="Center"
  VerticalAlignment="Center"/>
        </Grid>

        <Grid x:Name="AnimationGrid" Width="auto" Height="auto" Margin="1016,180,804,784"
      HorizontalAlignment="Center"
      VerticalAlignment="Center">
            <Ellipse x:Name="GlowEffect"
             Width="100" Height="100"
             Fill="#efeb24"
             Opacity="0.3"
             RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="glowScale" ScaleX="0.9" ScaleY="0.9"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <Ellipse x:Name="Circle"
             Width="50" Height="50"
             Fill="#00ff00"
             Stroke="Transparent"
             RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="scaleTransform" ScaleX="0.9" ScaleY="0.9"/>
                </Ellipse.RenderTransform>
            </Ellipse>
            <TextBlock x:Name="PercentText"
               Text="0%"
               FontSize="14"
               FontWeight="Bold"
               Foreground="blue"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
