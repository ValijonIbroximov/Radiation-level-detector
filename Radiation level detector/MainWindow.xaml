                            <Button Click="Button5_Click" HorizontalContentAlignment="Left" Content="Boshqa topilmadi" Background="DarkGray" Margin="10, 0, 0, 0"/>
                        </StackPanel>
                        <Button Content="ShHO" Background="Bisque"/>
                        <Button Content="MHO" Background="Bisque"/>
