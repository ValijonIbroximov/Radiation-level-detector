                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="blue"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- Sensor 4 -->
        <Grid x:Name="AnimationGrid4" Width="140" Height="140"
              HorizontalAlignment="Left" VerticalAlignment="Top"
              Margin="300,500,0,0">
            <Ellipse x:Name="GlowEffect4"
